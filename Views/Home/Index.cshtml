@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<div class="text-center">
    <h1>Welcome to Amazon</h1>
    <img width="350" src="~/img/logo.png" />
</div>

<table class="centertable">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>ISBN</th>
        <th>Classification</th>
        <th>Category</th>
        <th>Price</th>
        <th>Pages</th>
    </tr>
    @foreach (var x in Model.Books)
    {
    <tr>
        <td>@x.Title</td>
        <td>@x.Author</td>
        <td>@x.Publisher</td>
        <td>@x.ISBN</td>
        <td>@x.Category</td>
        <td>@x.Classification</td>
        <td>$@x.Price</td>
        <td>@x.Pages</td>
    </tr>
    }
</table>

<div page-model="@Model.PagingInfo" page-action="Index"></div>