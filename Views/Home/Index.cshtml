@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Book>

<div class="text-center">
    <h1>Welcome to Amazon</h1>
    <img width="350" src="~/img/logo.png" />
</div>

<table class="centertable">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>ISBN</th>
        <th>Classification/Category</th>
        <th>Price</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Title</td>
            <td>@x.Author</td>
            <td>@x.Publisher</td>
            <td>@x.ISBN</td>
            <td>@x.Category</td>
            <td>$@x.Price</td>
        </tr>
    }
</table>